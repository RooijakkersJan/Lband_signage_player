<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context=".activities.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSettings"
        android:layout_marginTop="30dp"
        android:textSize="0dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:text="Permissions"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"

                >

                <ImageView
                    android:id="@+id/imageLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/smclogin" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".10"

                >

                <TextView
                    android:id="@+id/txtRotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Rotation"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".45"
                android:gravity="center"

                >


                <RadioGroup
                    android:id="@+id/groupradio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtRotation"
                    android:layout_marginStart="50dp">


                    <RadioButton
                        android:id="@+id/radia_0"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#0000FF"
                        android:text="0 (Landscape Normal)"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radia_90"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#0000FF"
                        android:text="90 (Portrait Right)"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radia_180"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#0000FF"
                        android:text="180 (Inverse Landscape)"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radia_270"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#0000FF"
                        android:text="270 (Portrait Left)"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".10"

                >

                <TextView
                    android:id="@+id/txtStartup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:text="StartUp"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:gravity="center"

                >

                <RadioGroup
                    android:id="@+id/groupradiostartup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtRotation"
                    android:layout_marginStart="50dp">


                    <RadioButton
                        android:id="@+id/radio_auto"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#0000FF"
                        android:text="Auto"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radio_manual"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#0000FF"
                        android:text="Manual"
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".10"

                >

                <TextView
                    android:id="@+id/txtpermission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:text="Permissions"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".15"


                >

                <CheckBox
                    android:id="@+id/checkBoxAppsoverApps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/groupradio"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:buttonTint="#0000FF"
                    android:text="Apps over Apps"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".15"


                >

                <CheckBox
                    android:id="@+id/checkBoxStorageApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkBoxAppsoverApps"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:buttonTint="#0000FF"
                    android:text="Storage"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtloading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Loading Settings...."
                android:textColor="@color/black"
                android:textSize="15dp"
                android:visibility="gone" />

            <com.github.rahatarmanahmed.cpv.CircularProgressView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progress_view1"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/txtloading"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cpv_animAutostart="true"
                app:cpv_indeterminate="true"
                app:cpv_color="@color/player_background"/>



            <ImageButton
                android:id="@+id/btn_Submit1"
                android:layout_width="80dp"
                android:layout_height="69dp"
                android:layout_below="@+id/progress_view1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:contentDescription="NULL"
                android:background="@drawable/clickimg"
                android:text="Set" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>